<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/btn_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:gravity="center"
        android:text="@string/settings"
        android:textAppearance="@android:style/TextAppearance.Large.Inverse" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:src="@drawable/logo"
        android:text="@string/settings"
        android:textAppearance="@android:style/TextAppearance.Large.Inverse" />

    <Button
        android:id="@+id/btn_interstitial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/interstitial" />

    <Button
        android:id="@+id/btn_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/banner" />

    <Button
        android:id="@+id/btn_list_item_brief"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_item_brief" />

    <Button
        android:id="@+id/btn_list_item_full"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_item_full" />

    <Button
        android:id="@+id/btn_carousel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/carousel" />

    <Button
        android:id="@+id/btn_video_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/video_banner" />

    <Button
        android:id="@+id/btn_in_feed_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/in_feed_video" />

</LinearLayout>